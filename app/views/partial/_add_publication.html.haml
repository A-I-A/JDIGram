.container
  .modal.fade{ id: "addPublicationModal", tabindex: -1, aria: { hidden: true } }
    .modal-dialog
      .modal-content
        .modal-header
          %h5.modal-title
            Share your impressions
          %button.btn-close{data: {bs: {dismiss: "modal"}}}
        .modal-body
          .container
            .pub-avatar-description-row
              .pub-avatar-container
                - if @users
                  - user = @users.find(current_user.id)
                - else 
                  - user = @user
                - if user.avatar.attached?
                  %img.pub-avatar{src: url_for(user.avatar)}
                  .pub-avatar-spinner
                    = svg "spinner" 
                - else
                  = svg "user_icon_glyph"
              %textarea.pub-description
            .pub-photo-list
        .pub-footer
          %label.pub-add-photo{for: "photo_input"}
            %input.pub-photo-input{type: "file", id: "photo_input", accept: "image/*", multiple: true}
            = svg "add_photo"
          %button.btn.btn-primary{id: "publicationButton", user_id: user.id}
            Save
          
          
